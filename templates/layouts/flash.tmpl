{% if flash_messages %}
    <ul>
        {% for message in flash_messages %}
            <li class="alert alert-success">{{ message }}</li>
        {% endfor %}
    </ul>
{% endif %}

{% if errors %}
    <ul>
        {% for error in errors %}
            <li class="alert alert-danger">{{ error }}</li>
        {% endfor %}
    </ul>
{% endif %}